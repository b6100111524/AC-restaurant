<div class="container">
  <h1>Fooood</h1>
  <div class="underbar"></div>
  <div class="admin-index-type">
    <%= link_to 'Restaurant', admin_restaurants_path %> | <%= link_to 'Categories', admin_categories_path %>
  </div>
  <%# 切換 總表&分類 %>

  <div class="row">
    <div class="col-md-12">
      <div>
        <%= link_to 'New Restaurant Add', new_admin_restaurant_path, class: "btn btn-primary" %>
      </div>
      <br>
      <table class="table table-hover">
      <%# table class= "table table-striped table-bordered" %>
        <thead>
          <tr>
            <th class="th_head">ID</th>
            <th class="th_head">CATEGORY</th>
            <th class="th_head">RESTAURANT NAME</th>
            <th class="th_head">SHOW</th>
            <th class="th_head">EDIT</th>
            <th class="th_head">DELETE</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <th scope="row"><%= restaurant.id %></th>
            <td><%= restaurant.category.name %></td>
            <td><%= restaurant.name %></td>
            <td><%= link_to 'Show', admin_restaurant_path(restaurant) %></td>
            <td><%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %></td>
            <td><%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: { confirm: "Delete This Restaurant?"} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @restaurants %>
      </div>
    </div>
  </div>
</div>