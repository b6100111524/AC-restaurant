<div class="container">
  <h1>Fooood News Info</h1>
  <div class="underbar"></div>
  <div class="admin-index-type">
  <%= link_to 'Restaurant', restaurants_path %> | <%= link_to 'News Info', feeds_restaurants_path %>
  </div>
  <div class="row">

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">最新餐廳</div>
          <div class="panel-body">
            <% @recent_restaurants.each do |restaurant| %>
              <div>
                <h4>
                  <%= link_to restaurant.name, restaurant_path(restaurant) %>
                  <small><%= restaurant.category.name %></small>
                </h4>
                <p><%= truncate(restaurant.description, length: 80) %></p>
                <hr>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">最新評論</div>
          <div class="panel-body">
            <% @recent_comments.each do |comment| %>
              <div>
                <h4>
                  <%= link_to comment.restaurant.name, restaurant_path(comment.restaurant) %>
                </h4>
                <p><%= truncate(comment.content, length: 80) %><small> - <%= link_to comment.user.name, user_path(comment.user) %></small></p>
                <hr>
              </div>
            <% end %>
          </div>
        </div>
      </div>

  </div>
</div>
